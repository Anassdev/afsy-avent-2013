{% extends 'LaNetscouadeAngularDemoBundle::layout.html.twig' %}

{% block javascripts %}
    {% javascripts
        "@bootstrap_js"
        "@angular_js"
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>AngularJS with Twig</h1>
        <div id="name-widget" ng-app>
            <label>Name:</label>
            <input type="text" ng-model="yourName" placeholder="Enter a name here">
            <hr>
            <!-- simple demo infos http://angularjs.org/#the-basics -->
            <!-- affiche le contenu de l'input dans le h2 -->
            {% verbatim %}
                <h2>Hello {{yourName}}!</h2>
            {% endverbatim %}
            {# verbatim empeche le conflit {{}} angularjs-twig http://stackoverflow.com/questions/13671701/angularjs-twig-conflict-with-double-curly-braces #}
        </div>
    </div>
{% endblock %}
